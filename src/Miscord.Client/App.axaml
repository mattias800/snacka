<Application
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Miscord.Client.App"
    RequestedThemeVariant="Dark">
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Miscord.Client/Styles/ComponentStyles.axaml"/>
        <Style Selector="TextBox">
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="SelectionBrush" Value="#5865f2"/>
        </Style>
        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="#202225"/>
            <Setter Property="BorderBrush" Value="#5865f2"/>
        </Style>
        <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="#2a2d31"/>
        </Style>
    </Application.Styles>
</Application>
