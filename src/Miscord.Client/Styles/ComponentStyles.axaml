<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Voice channel item style with hover/press highlights -->
    <Style Selector="Border.voice-channel-item">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    <Style Selector="Border.voice-channel-item:pointerover">
        <Setter Property="Background" Value="#35373c"/>
    </Style>
    <Style Selector="Border.voice-channel-item:pressed">
        <Setter Property="Background" Value="#3f4248"/>
    </Style>

    <!-- Text channel button style -->
    <Style Selector="Button.channel-btn">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    <Style Selector="Button.channel-btn:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#35373c"/>
    </Style>
    <Style Selector="Button.channel-btn:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#3f4248"/>
    </Style>

    <!-- Member list item style with hover/press highlights -->
    <Style Selector="Border.member-item">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    <Style Selector="Border.member-item:pointerover">
        <Setter Property="Background" Value="#35373c"/>
    </Style>
    <Style Selector="Border.member-item:pressed">
        <Setter Property="Background" Value="#3f4248"/>
    </Style>

    <!-- Voice participant item style with hover/press highlights -->
    <Style Selector="Border.voice-participant">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Border.voice-participant:pointerover">
        <Setter Property="Background" Value="#35373c"/>
    </Style>
    <Style Selector="Border.voice-participant:pressed">
        <Setter Property="Background" Value="#3f4248"/>
    </Style>

    <!-- Message action button style (reply, react, edit, delete) -->
    <Style Selector="Button.msg-action-btn">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.msg-action-btn:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#40444b"/>
    </Style>
    <Style Selector="Button.msg-action-btn:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#4f545c"/>
    </Style>

</Styles>
