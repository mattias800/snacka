<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Miscord.Client.ViewModels"
             xmlns:controls="using:Miscord.Client.Controls"
             xmlns:conv="using:Miscord.Client.Converters"
             xmlns:services="using:Miscord.Client.Services"
             xmlns:views="using:Miscord.Client.Views"
             x:Class="Miscord.Client.Views.MainAppView"
             x:DataType="vm:MainAppViewModel"
             x:CompileBindings="False">
    <UserControl.Styles>
        <!-- Voice channel item style with hover/press highlights -->
        <Style Selector="Border.voice-channel-item">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Border.voice-channel-item:pointerover">
            <Setter Property="Background" Value="#35373c"/>
        </Style>
        <Style Selector="Border.voice-channel-item:pressed">
            <Setter Property="Background" Value="#3f4248"/>
        </Style>

        <!-- Text channel button style -->
        <Style Selector="Button.channel-btn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="Button.channel-btn:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#35373c"/>
        </Style>
        <Style Selector="Button.channel-btn:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#3f4248"/>
        </Style>

        <!-- Member list item style with hover/press highlights -->
        <Style Selector="Border.member-item">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Border.member-item:pointerover">
            <Setter Property="Background" Value="#35373c"/>
        </Style>
        <Style Selector="Border.member-item:pressed">
            <Setter Property="Background" Value="#3f4248"/>
        </Style>

        <!-- Message action button style (reply, react, edit, delete) -->
        <Style Selector="Button.msg-action-btn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.msg-action-btn:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#40444b"/>
        </Style>
        <Style Selector="Button.msg-action-btn:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#4f545c"/>
        </Style>
    </UserControl.Styles>
    <UserControl.Resources>
        <conv:ColorToBorderConverter x:Key="ColorToBorderConverter"/>
    </UserControl.Resources>
    <Grid Background="#202225">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="72"/>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="240"/>
        </Grid.ColumnDefinitions>

        <!-- Community List (Left Sidebar) -->
        <Border Grid.Column="0" Background="#202225" Padding="0,12">
            <DockPanel>
                <!-- Add Community Button -->
                <Button DockPanel.Dock="Bottom"
                        Command="{Binding CreateCommunityCommand}"
                        Background="Transparent"
                        HorizontalAlignment="Center"
                        Margin="0,8"
                        Padding="0"
                        Cursor="Hand"
                        IsEnabled="{Binding IsLoading, Converter={x:Static BoolConverters.Not}}">
                    <Border Width="48" Height="48" CornerRadius="24"
                            Background="#36393f">
                        <TextBlock Text="+"
                                   Foreground="#3ba55c"
                                   FontSize="28"
                                   FontWeight="Light"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Button>

                <!-- DM Button and Server Icons -->
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <StackPanel>
                        <!-- Direct Messages Button -->
                        <Button Command="{Binding OpenDMsCommand}"
                                Background="Transparent"
                                HorizontalAlignment="Center"
                                Margin="0,4"
                                Padding="0"
                                Cursor="Hand"
                                ToolTip.Tip="Direct Messages">
                            <Border Width="48" Height="48"
                                    CornerRadius="24"
                                    Background="#36393f">
                                <TextBlock Text="âœ‰"
                                           Foreground="White"
                                           FontSize="20"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Button>

                        <!-- Separator -->
                        <Border Width="32" Height="2" Background="#36393f" Margin="8,8" HorizontalAlignment="Center"/>

                        <!-- Community Icons -->
                        <ItemsControl x:Name="CommunitiesList" ItemsSource="{Binding Communities}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Background="Transparent"
                                        Command="{Binding #CommunitiesList.DataContext.SelectCommunityCommand}"
                                        CommandParameter="{Binding}"
                                        HorizontalAlignment="Center"
                                        Margin="0,4"
                                        Padding="0"
                                        Cursor="Hand">
                                    <Border Width="48" Height="48"
                                            CornerRadius="24"
                                            Background="#5865f2">
                                        <TextBlock Text="{Binding Name[0]}"
                                                   Foreground="White"
                                                   FontSize="20"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Channel List (Second Column) -->
        <Border Grid.Column="1" Background="#2f3136">
            <DockPanel>
                <!-- Community Name Header -->
                <Border DockPanel.Dock="Top" Background="#2f3136" Padding="16,12" BorderThickness="0,0,0,1" BorderBrush="#202225">
                    <TextBlock Text="{Binding SelectedCommunity.Name, FallbackValue='Select a Community'}"
                               Foreground="White"
                               FontWeight="SemiBold"
                               FontSize="16"/>
                </Border>

                <!-- Voice Connected Panel (shows when in voice channel) -->
                <Border DockPanel.Dock="Bottom"
                        Background="#292b2f"
                        Padding="8"
                        IsVisible="{Binding IsInVoiceChannel}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Voice Channel Info -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                            <!-- Connected icon (green) -->
                            <TextBlock Text="ðŸ”Š"
                                       Foreground="#3ba55c"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding IsVoiceConnected}"/>
                            <!-- Connecting icon (yellow) -->
                            <TextBlock Text="ðŸ“¡"
                                       Foreground="#faa61a"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding IsVoiceConnecting}"/>
                            <StackPanel>
                                <!-- Connected status (green) -->
                                <TextBlock Text="{Binding VoiceConnectionStatusText}"
                                           Foreground="#3ba55c"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           IsVisible="{Binding IsVoiceConnected}"/>
                                <!-- Connecting status (yellow) -->
                                <TextBlock Text="{Binding VoiceConnectionStatusText}"
                                           Foreground="#faa61a"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           IsVisible="{Binding IsVoiceConnecting}"/>
                                <TextBlock Text="{Binding CurrentVoiceChannel.Name}"
                                           Foreground="#72767d"
                                           FontSize="11"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Voice Controls (only show when connected) -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8"
                                    IsVisible="{Binding IsVoiceConnected}">
                            <!-- Mute Button - red when muted -->
                            <Panel>
                                <Button Command="{Binding ToggleMuteCommand}"
                                        Padding="8"
                                        CornerRadius="4"
                                        Cursor="Hand"
                                        Background="#ed4245"
                                        ToolTip.Tip="Unmute"
                                        IsVisible="{Binding IsMuted}">
                                    <TextBlock Text="ðŸ”‡" Foreground="White" FontSize="16"/>
                                </Button>
                                <Button Command="{Binding ToggleMuteCommand}"
                                        Padding="8"
                                        CornerRadius="4"
                                        Cursor="Hand"
                                        Background="Transparent"
                                        ToolTip.Tip="Mute"
                                        IsVisible="{Binding !IsMuted}">
                                    <TextBlock Text="ðŸŽ¤" Foreground="White" FontSize="16"/>
                                </Button>
                            </Panel>
                            <!-- Deafen Button - red when deafened -->
                            <Panel>
                                <Button Command="{Binding ToggleDeafenCommand}"
                                        Padding="8"
                                        CornerRadius="4"
                                        Cursor="Hand"
                                        Background="#ed4245"
                                        ToolTip.Tip="Undeafen"
                                        IsVisible="{Binding IsDeafened}">
                                    <TextBlock Text="ðŸ”‡" Foreground="White" FontSize="16"/>
                                </Button>
                                <Button Command="{Binding ToggleDeafenCommand}"
                                        Padding="8"
                                        CornerRadius="4"
                                        Cursor="Hand"
                                        Background="Transparent"
                                        ToolTip.Tip="Deafen"
                                        IsVisible="{Binding !IsDeafened}">
                                    <TextBlock Text="ðŸ”Š" Foreground="White" FontSize="16"/>
                                </Button>
                            </Panel>
                            <!-- Camera Button - green when on -->
                            <Panel>
                                <Button Command="{Binding ToggleCameraCommand}"
                                        Padding="8"
                                        CornerRadius="4"
                                        Cursor="Hand"
                                        Background="#3ba55c"
                                        ToolTip.Tip="Turn off camera"
                                        IsVisible="{Binding IsCameraOn}">
                                    <TextBlock Text="ðŸ“¹" Foreground="White" FontSize="16"/>
                                </Button>
                                <Button Command="{Binding ToggleCameraCommand}"
                                        Padding="8"
                                        CornerRadius="4"
                                        Cursor="Hand"
                                        Background="Transparent"
                                        ToolTip.Tip="Turn on camera"
                                        IsVisible="{Binding !IsCameraOn}">
                                    <TextBlock Text="ðŸ“·" Foreground="White" FontSize="16"/>
                                </Button>
                            </Panel>
                            <!-- Screen Share Button - green when sharing -->
                            <Panel>
                                <Button Command="{Binding ToggleScreenShareCommand}"
                                        Padding="8"
                                        CornerRadius="4"
                                        Cursor="Hand"
                                        Background="#3ba55c"
                                        ToolTip.Tip="Stop sharing"
                                        IsVisible="{Binding IsScreenSharing}">
                                    <TextBlock Text="ðŸ–¥ï¸" Foreground="White" FontSize="16"/>
                                </Button>
                                <Button Command="{Binding ToggleScreenShareCommand}"
                                        Padding="8"
                                        CornerRadius="4"
                                        Cursor="Hand"
                                        Background="Transparent"
                                        ToolTip.Tip="Share screen"
                                        IsVisible="{Binding !IsScreenSharing}">
                                    <TextBlock Text="ðŸ–¥ï¸" Foreground="White" FontSize="16"/>
                                </Button>
                            </Panel>
                            <!-- Allow Drawing Button - only visible when screen sharing -->
                            <Panel IsVisible="{Binding IsScreenSharing}">
                                <ToggleButton IsChecked="{Binding IsDrawingAllowedForViewers}"
                                              Padding="8"
                                              CornerRadius="4"
                                              Cursor="Hand"
                                              ToolTip.Tip="Allow viewers to draw on your screen">
                                    <TextBlock Text="âœï¸" Foreground="White" FontSize="16"/>
                                </ToggleButton>
                            </Panel>
                            <Button Command="{Binding LeaveVoiceChannelCommand}"
                                    Background="#ed4245"
                                    Padding="8"
                                    CornerRadius="4"
                                    Cursor="Hand"
                                    ToolTip.Tip="Disconnect">
                                <TextBlock Text="ðŸ“ž"
                                           Foreground="White"
                                           FontSize="16"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- User Panel at Bottom -->
                <Border DockPanel.Dock="Bottom" Background="#292b2f" Padding="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="32" Height="32" CornerRadius="16" Background="#5865f2" Margin="0,0,8,0">
                            <TextBlock Text="{Binding Username[0]}"
                                       Foreground="White"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Username}"
                                       Foreground="White"
                                       FontSize="13"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Online"
                                       Foreground="#3ba55c"
                                       FontSize="11"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                            <Button Command="{Binding OpenSettingsCommand}"
                                    Background="Transparent"
                                    Padding="6,4"
                                    Cursor="Hand"
                                    ToolTip.Tip="Settings">
                                <TextBlock Text="âš™"
                                           Foreground="#b9bbbe"
                                           FontSize="14"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Channel List -->
                <ScrollViewer Margin="8,8,0,0">
                    <StackPanel>
                        <!-- Text Channels Section -->
                        <Grid Margin="8,8,8,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="TEXT CHANNELS"
                                       Foreground="#72767d"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="1"
                                    Command="{Binding CreateChannelCommand}"
                                    Background="Transparent"
                                    Padding="4"
                                    Cursor="Hand"
                                    ToolTip.Tip="Create Text Channel"
                                    IsEnabled="{Binding IsLoading, Converter={x:Static BoolConverters.Not}}"
                                    IsVisible="{Binding CanManageChannels}">
                                <TextBlock Text="+"
                                           Foreground="#72767d"
                                           FontSize="16"
                                           FontWeight="Bold"/>
                            </Button>
                        </Grid>

                        <ItemsControl x:Name="TextChannelsList" ItemsSource="{Binding TextChannels}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Button Classes="channel-btn"
                                                Command="{Binding #TextChannelsList.DataContext.SelectChannelCommand}"
                                                CommandParameter="{Binding}"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Stretch"
                                                Padding="8,6"
                                                Margin="0,1"
                                                Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="6">
                                                    <TextBlock Text="#"
                                                               Foreground="#72767d"
                                                               FontSize="18"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Name}"
                                                               Foreground="#8e9297"
                                                               FontSize="15"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <!-- Unread badge -->
                                                <Border Grid.Column="1"
                                                        Background="#ed4245"
                                                        CornerRadius="8"
                                                        Padding="5,1"
                                                        Margin="4,0"
                                                        VerticalAlignment="Center"
                                                        IsVisible="{Binding UnreadCount, Converter={x:Static conv:IntGreaterThanZeroConverter.Instance}}">
                                                    <TextBlock Text="{Binding UnreadCount}"
                                                               Foreground="White"
                                                               FontSize="11"
                                                               FontWeight="SemiBold"/>
                                                </Border>
                                                <Button Grid.Column="2"
                                                        Command="{Binding #TextChannelsList.DataContext.StartEditChannelCommand}"
                                                        CommandParameter="{Binding}"
                                                        Background="Transparent"
                                                        Padding="4,2"
                                                        Cursor="Hand"
                                                        ToolTip.Tip="Rename Channel"
                                                        IsVisible="{Binding #TextChannelsList.DataContext.CanManageChannels}">
                                                    <TextBlock Text="âœŽ"
                                                               Foreground="#72767d"
                                                               FontSize="12"/>
                                                </Button>
                                            </Grid>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Voice Channels Section -->
                        <Grid Margin="8,16,8,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="VOICE CHANNELS"
                                       Foreground="#72767d"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="1"
                                    Command="{Binding CreateVoiceChannelCommand}"
                                    Background="Transparent"
                                    Padding="4"
                                    Cursor="Hand"
                                    ToolTip.Tip="Create Voice Channel"
                                    IsEnabled="{Binding IsLoading, Converter={x:Static BoolConverters.Not}}"
                                    IsVisible="{Binding CanManageChannels}">
                                <TextBlock Text="+"
                                           Foreground="#72767d"
                                           FontSize="16"
                                           FontWeight="Bold"/>
                            </Button>
                        </Grid>

                        <!-- Voice Channels with participant tracking -->
                        <ItemsControl x:Name="VoiceChannelsList" ItemsSource="{Binding VoiceChannelViewModels}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Border Classes="voice-channel-item"
                                                Padding="8,6"
                                                Margin="0,1"
                                                Cursor="Hand"
                                                PointerPressed="VoiceChannel_PointerPressed"
                                                PointerReleased="VoiceChannel_PointerReleased"
                                                Tag="{Binding Channel}">
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <TextBlock Text="ðŸ”Š"
                                                           Foreground="#72767d"
                                                           FontSize="14"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Name}"
                                                           Foreground="#8e9297"
                                                           FontSize="15"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <!-- Voice Participants - directly bound to ObservableCollection -->
                                        <ItemsControl ItemsSource="{Binding Participants}" Margin="24,0,0,4">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Spacing="6" Margin="8,2">
                                                        <Ellipse Width="24" Height="24" Fill="#40444b"/>
                                                        <TextBlock Text="{Binding Username}"
                                                                   Foreground="{Binding IsSpeaking, Converter={x:Static conv:SpeakingForegroundConverter.Instance}}"
                                                                   FontSize="13"
                                                                   VerticalAlignment="Center"/>
                                                        <TextBlock Text="ðŸ”‡"
                                                                   FontSize="10"
                                                                   Foreground="#ed4245"
                                                                   VerticalAlignment="Center"
                                                                   IsVisible="{Binding IsMuted}"/>
                                                        <TextBlock Text="ðŸ”•"
                                                                   FontSize="10"
                                                                   Foreground="#ed4245"
                                                                   VerticalAlignment="Center"
                                                                   IsVisible="{Binding IsDeafened}"/>
                                                        <TextBlock Text="ðŸ“¹"
                                                                   FontSize="10"
                                                                   Foreground="#3ba55c"
                                                                   VerticalAlignment="Center"
                                                                   IsVisible="{Binding IsCameraOn}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Channel Rename Editor -->
                        <Border Background="#202225"
                                CornerRadius="4"
                                Padding="8"
                                Margin="0,8,8,0"
                                IsVisible="{Binding EditingChannel, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <StackPanel Spacing="8">
                                <TextBlock Text="RENAME CHANNEL"
                                           Foreground="#72767d"
                                           FontSize="11"
                                           FontWeight="SemiBold"/>
                                <TextBox x:Name="ChannelRenameInputBox"
                                         Text="{Binding EditingChannelName}"
                                         Background="#40444b"
                                         Foreground="White"
                                         BorderThickness="0"
                                         CornerRadius="4"
                                         Padding="8"
                                         IsEnabled="{Binding IsLoading, Converter={x:Static BoolConverters.Not}}"
                                         KeyDown="OnChannelRenameKeyDown"/>
                                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                                    <Button Command="{Binding CancelEditChannelCommand}"
                                            Background="Transparent"
                                            Foreground="#b9bbbe"
                                            Content="Cancel"
                                            Padding="8,4"
                                            Cursor="Hand"
                                            IsEnabled="{Binding IsLoading, Converter={x:Static BoolConverters.Not}}"/>
                                    <Button Command="{Binding SaveChannelNameCommand}"
                                            Background="#5865f2"
                                            Foreground="White"
                                            Padding="12,4"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            IsEnabled="{Binding IsLoading, Converter={x:Static BoolConverters.Not}}">
                                        <Panel>
                                            <TextBlock Text="Save" IsVisible="{Binding IsLoading, Converter={x:Static BoolConverters.Not}}"/>
                                            <TextBlock Text="Saving..." IsVisible="{Binding IsLoading}"/>
                                        </Panel>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Main Content Area (Chat, Voice Channel, or DM) -->
        <Grid Grid.Column="2">
            <!-- DM Content (shown when viewing DM conversation) -->
            <Border Background="#36393f" IsVisible="{Binding IsViewingDM}">
                <DockPanel>
                    <!-- DM Header with close button -->
                    <Border DockPanel.Dock="Top" Background="#36393f" Padding="16,12" BorderThickness="0,0,0,1" BorderBrush="#202225">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="@"
                                           Foreground="#72767d"
                                           FontSize="22"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding DMRecipientName, FallbackValue='User'}"
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="16"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Command="{Binding CloseDMCommand}"
                                    Background="Transparent"
                                    Padding="8,4"
                                    Cursor="Hand"
                                    ToolTip.Tip="Close DM">
                                <TextBlock Text="âœ•"
                                           Foreground="#72767d"
                                           FontSize="16"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- DM Message Input -->
                    <Border DockPanel.Dock="Bottom" Padding="16" Background="#36393f">
                        <StackPanel>
                            <!-- DM Typing Indicator -->
                            <TextBlock Text="{Binding DMTypingIndicatorText}"
                                       IsVisible="{Binding IsDMTyping}"
                                       Foreground="#72767d"
                                       FontSize="12"
                                       FontStyle="Italic"
                                       Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="DMMessageInputBox"
                                     Grid.Column="0"
                                     Text="{Binding DMMessageInput}"
                                     Watermark="{Binding DMRecipientName, StringFormat='Message @{0}'}"
                                     Background="#40444b"
                                     Foreground="White"
                                     BorderThickness="0"
                                     CornerRadius="8"
                                     Padding="16,12"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MaxHeight="200"/>

                            <Button Grid.Column="1"
                                    Command="{Binding SendDMMessageCommand}"
                                    Background="#5865f2"
                                    Foreground="White"
                                    Padding="16,10"
                                    Margin="8,0,0,0"
                                    CornerRadius="4">
                                <Panel>
                                    <TextBlock Text="Send" IsVisible="{Binding IsLoading, Converter={x:Static BoolConverters.Not}}"/>
                                    <TextBlock Text="..." IsVisible="{Binding IsLoading}"/>
                                </Panel>
                            </Button>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- DM Messages List -->
                    <ScrollViewer x:Name="DMMessagesScrollViewer" Margin="0,8">
                        <ItemsControl x:Name="DMMessagesList" ItemsSource="{Binding DMMessages}" Margin="16,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <!-- Date separator -->
                                        <Border Margin="0,16,0,8" Padding="0">
                                            <Border.IsVisible>
                                                <MultiBinding Converter="{x:Static conv:ShowDateSeparatorConverter.Instance}">
                                                    <Binding />
                                                    <Binding Path="DataContext.DMMessages" ElementName="DMMessagesList" />
                                                </MultiBinding>
                                            </Border.IsVisible>
                                            <Grid>
                                                <Separator Background="#42464d" Margin="0,8"/>
                                                <Border Background="#36393f" HorizontalAlignment="Center" Padding="8,2">
                                                    <TextBlock Text="{Binding CreatedAt, Converter={x:Static conv:DateSeparatorTextConverter.Instance}}"
                                                               Foreground="#72767d"
                                                               FontSize="11"
                                                               FontWeight="SemiBold"/>
                                                </Border>
                                            </Grid>
                                        </Border>

                                    <Border Margin="0,8" Padding="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Avatar -->
                                            <Border Grid.Column="0"
                                                    Width="40" Height="40"
                                                    CornerRadius="20"
                                                    Background="#5865f2"
                                                    VerticalAlignment="Top"
                                                    Margin="0,0,12,0">
                                                <TextBlock Text="{Binding SenderUsername[0]}"
                                                           Foreground="White"
                                                           FontSize="16"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Message Content -->
                                            <StackPanel Grid.Column="1">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="{Binding SenderUsername}"
