<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Miscord.Client.ViewModels"
             xmlns:services="using:Miscord.Client.Services"
             xmlns:conv="using:Miscord.Client.Converters"
             x:Class="Miscord.Client.Views.ScreenSharePickerView"
             x:DataType="vm:ScreenSharePickerViewModel"
             MaxWidth="500"
             MaxHeight="400">

    <UserControl.Resources>
        <conv:BoolToForegroundConverter x:Key="BoolToForegroundConverter"/>
    </UserControl.Resources>

    <Border Background="#2f3136"
            CornerRadius="8"
            Padding="20"
            BorderBrush="#202225"
            BorderThickness="1">
        <Grid RowDefinitions="Auto,Auto,Auto,*,Auto">
            <!-- Header -->
            <TextBlock Text="Share Your Screen"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#ffffff"
                       Margin="0,0,0,16"/>

            <!-- Tab Buttons -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Spacing="8"
                        Margin="0,0,0,16">
                <ToggleButton IsChecked="{Binding ShowDisplays}"
                              Background="Transparent"
                              Foreground="{Binding ShowDisplays, Converter={StaticResource BoolToForegroundConverter}}"
                              Padding="16,8"
                              CornerRadius="4"
                              BorderThickness="0"
                              Cursor="Hand">
                    <TextBlock Text="Screens" FontWeight="Medium"/>
                </ToggleButton>

                <ToggleButton IsChecked="{Binding ShowWindows}"
                              Background="Transparent"
                              Foreground="{Binding ShowWindows, Converter={StaticResource BoolToForegroundConverter}}"
                              Padding="16,8"
                              CornerRadius="4"
                              BorderThickness="0"
                              Cursor="Hand"
                              IsVisible="{Binding HasWindows}">
                    <TextBlock Text="Windows" FontWeight="Medium"/>
                </ToggleButton>

                <ToggleButton IsChecked="{Binding ShowApplications}"
                              Background="Transparent"
                              Foreground="{Binding ShowApplications, Converter={StaticResource BoolToForegroundConverter}}"
                              Padding="16,8"
                              CornerRadius="4"
                              BorderThickness="0"
                              Cursor="Hand"
                              IsVisible="{Binding HasApplications}">
                    <TextBlock Text="Apps" FontWeight="Medium"/>
                </ToggleButton>

                <Button Command="{Binding RefreshCommand}"
                        Background="Transparent"
                        Padding="8"
                        CornerRadius="4"
                        Cursor="Hand"
                        ToolTip.Tip="Refresh sources"
                        VerticalAlignment="Center">
                    <TextBlock Text="â†»" Foreground="#b9bbbe" FontSize="14"/>
                </Button>
            </StackPanel>

            <!-- Quality Settings -->
            <Grid Grid.Row="2" ColumnDefinitions="*,16,*,16,Auto" Margin="0,0,0,16">
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Resolution"
                               Foreground="#b9bbbe"
                               FontSize="12"
                               Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Resolutions}"
                              SelectedItem="{Binding SelectedResolution}"
                              HorizontalAlignment="Stretch"
                              Background="#40444b"
                              Foreground="#ffffff"
                              BorderThickness="0"
                              CornerRadius="4"
                              Padding="12,8">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Label}" Foreground="#ffffff"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Frame Rate"
                               Foreground="#b9bbbe"
                               FontSize="12"
                               Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Framerates}"
                              SelectedItem="{Binding SelectedFramerate}"
                              HorizontalAlignment="Stretch"
                              Background="#40444b"
                              Foreground="#ffffff"
                              BorderThickness="0"
                              CornerRadius="4"
                              Padding="12,8">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Label}" Foreground="#ffffff"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Audio checkbox (macOS only) -->
                <StackPanel Grid.Column="4" VerticalAlignment="Bottom"
                            IsVisible="{Binding CanCaptureAudio}">
                    <CheckBox IsChecked="{Binding IncludeAudio}"
                              Foreground="#b9bbbe"
                              Cursor="Hand">
                        <TextBlock Text="Share audio" Foreground="#b9bbbe" FontSize="13"/>
                    </CheckBox>
                </StackPanel>
            </Grid>

            <!-- Source Lists -->
            <ScrollViewer Grid.Row="3"
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,0,0,16">
                <Panel>
                    <!-- Displays List -->
                    <ListBox ItemsSource="{Binding Displays}"
                             SelectedItem="{Binding SelectedSource}"
                             IsVisible="{Binding ShowDisplays}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,0,0,8"/>
                                <Setter Property="Background" Value="#40444b"/>
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                <Setter Property="Background" Value="#5865f2"/>
                            </Style>
                            <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#4752c4"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="services:ScreenCaptureSource">
                                <Border Padding="12">
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <Border Background="#5865f2"
                                                CornerRadius="4"
                                                Width="48"
                                                Height="32">
                                            <TextBlock Text="ðŸ–¥ï¸"
                                                       FontSize="16"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="#ffffff"
                                                   VerticalAlignment="Center"
                                                   FontSize="14"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Windows List -->
                    <ListBox ItemsSource="{Binding Windows}"
                             SelectedItem="{Binding SelectedSource}"
                             IsVisible="{Binding ShowWindows}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,0,0,8"/>
                                <Setter Property="Background" Value="#40444b"/>
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                <Setter Property="Background" Value="#5865f2"/>
                            </Style>
                            <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#4752c4"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="services:ScreenCaptureSource">
                                <Border Padding="12">
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <Border Background="#43b581"
                                                CornerRadius="4"
                                                Width="48"
                                                Height="32">
                                            <TextBlock Text="ðŸ“±"
                                                       FontSize="16"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="#ffffff"
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding AppName}"
                                                       Foreground="#72767d"
                                                       FontSize="11"
                                                       IsVisible="{Binding AppName, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Applications List -->
                    <ListBox ItemsSource="{Binding Applications}"
                             SelectedItem="{Binding SelectedSource}"
                             IsVisible="{Binding ShowApplications}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,0,0,8"/>
                                <Setter Property="Background" Value="#40444b"/>
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                <Setter Property="Background" Value="#5865f2"/>
                            </Style>
                            <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#4752c4"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="services:ScreenCaptureSource">
                                <Border Padding="12">
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <Border Background="#faa61a"
                                                CornerRadius="4"
                                                Width="48"
                                                Height="32">
                                            <TextBlock Text="ðŸ“¦"
                                                       FontSize="16"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="#ffffff"
                                                   VerticalAlignment="Center"
                                                   FontSize="14"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty State -->
                    <TextBlock Text="No sources available"
                               Foreground="#72767d"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               IsVisible="{Binding !Displays.Count}"/>
                </Panel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="12">
                <Button Command="{Binding CancelCommand}"
                        Background="Transparent"
                        BorderBrush="#72767d"
                        BorderThickness="1"
                        Padding="20,10"
                        CornerRadius="4"
                        Cursor="Hand">
                    <TextBlock Text="Cancel" Foreground="#b9bbbe"/>
                </Button>

                <Button Command="{Binding ShareCommand}"
                        Background="#5865f2"
                        Padding="20,10"
                        CornerRadius="4"
                        Cursor="Hand"
                        IsEnabled="{Binding SelectedSource, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <TextBlock Text="Share" Foreground="#ffffff"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
