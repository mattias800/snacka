<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    Shared styles for list items across the application.
    Apply these classes to ensure consistent look and feel.

    Usage:
    - list-item-button: For clickable list items (Button)
    - list-item-border: For non-clickable list items (Border)
    - list-item-avatar: For the 32x32 circular avatar/icon container
    - list-item-primary-text: For the main text (username, title)
    - list-item-secondary-text: For secondary text (role, description)
    -->

    <!-- Clickable list item button style -->
    <Style Selector="Button.list-item-button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.list-item-button:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#35373c"/>
    </Style>

    <!-- Non-clickable list item border style (still has hover for visual feedback) -->
    <Style Selector="Border.list-item-border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Border.list-item-border:pointerover">
        <Setter Property="Background" Value="#35373c"/>
    </Style>

    <!-- Avatar/icon container (32x32 circle) -->
    <Style Selector="Border.list-item-avatar">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
    </Style>

    <!-- Primary text (username, title) -->
    <Style Selector="TextBlock.list-item-primary-text">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <!-- Secondary text (role, description, time) -->
    <Style Selector="TextBlock.list-item-secondary-text">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Foreground" Value="{DynamicResource Foreground3Brush}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        <Setter Property="Margin" Value="0,-2,0,0"/>
    </Style>

</Styles>
