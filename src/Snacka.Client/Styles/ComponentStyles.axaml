<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =====================================================
         HEROUI-INSPIRED BUTTON STYLES
         Gradient backgrounds, glow effects, large radius
         ===================================================== -->

    <!-- Primary Button - Gradient with glow effect -->
    <Style Selector="Button.btn-primary">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#338ef7" Offset="0"/>
                    <GradientStop Color="#006FEE" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.btn-primary:pointerover">
        <Setter Property="RenderTransform" Value="scale(1.02)"/>
    </Style>
    <Style Selector="Button.btn-primary:pointerover /template/ ContentPresenter">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#66aaf9" Offset="0"/>
                    <GradientStop Color="#338ef7" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <Style Selector="Button.btn-primary:pressed /template/ ContentPresenter">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#006FEE" Offset="0"/>
                    <GradientStop Color="#005bc4" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <Style Selector="Button.btn-primary:disabled">
        <Setter Property="Opacity" Value="0.5"/>
    </Style>

    <!-- Secondary Button - Subtle glass effect -->
    <Style Selector="Button.btn-secondary">
        <Setter Property="Background" Value="#27272a"/>
        <Setter Property="Foreground" Value="#fafafa"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#3f3f46"/>
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.btn-secondary:pointerover">
        <Setter Property="RenderTransform" Value="scale(1.02)"/>
    </Style>
    <Style Selector="Button.btn-secondary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#3f3f46"/>
        <Setter Property="BorderBrush" Value="#52525b"/>
    </Style>
    <Style Selector="Button.btn-secondary:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#52525b"/>
    </Style>

    <!-- Ghost Button - Transparent with subtle hover -->
    <Style Selector="Button.btn-ghost">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#a1a1aa"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.btn-ghost:pointerover">
        <Setter Property="Foreground" Value="#fafafa"/>
    </Style>
    <Style Selector="Button.btn-ghost:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#27272a"/>
    </Style>
    <Style Selector="Button.btn-ghost:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#3f3f46"/>
    </Style>

    <!-- Danger Button - Red gradient with glow -->
    <Style Selector="Button.btn-danger">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#f87171" Offset="0"/>
                    <GradientStop Color="#ef4444" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.btn-danger:pointerover">
        <Setter Property="RenderTransform" Value="scale(1.02)"/>
    </Style>
    <Style Selector="Button.btn-danger:pointerover /template/ ContentPresenter">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#fca5a5" Offset="0"/>
                    <GradientStop Color="#f87171" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <Style Selector="Button.btn-danger:pressed /template/ ContentPresenter">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#ef4444" Offset="0"/>
                    <GradientStop Color="#dc2626" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Icon Button - Circular with hover effect -->
    <Style Selector="Button.btn-icon">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#71717a"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinWidth" Value="36"/>
        <Setter Property="MinHeight" Value="36"/>
    </Style>
    <Style Selector="Button.btn-icon:pointerover">
        <Setter Property="Foreground" Value="#fafafa"/>
    </Style>
    <Style Selector="Button.btn-icon:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#27272a"/>
    </Style>
    <Style Selector="Button.btn-icon:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#3f3f46"/>
    </Style>

    <!-- =====================================================
         GLASSMORPHISM CARD STYLES
         Semi-transparent with blur simulation, large radius
         ===================================================== -->

    <!-- Card - Glass effect -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="#E618181b"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="BorderBrush" Value="#3f3f46"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="BoxShadow" Value="0 4 6 -1 #1a000000, 0 2 4 -2 #1a000000"/>
    </Style>

    <!-- Card Elevated - Stronger shadow -->
    <Style Selector="Border.card-elevated">
        <Setter Property="Background" Value="#E618181b"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="BoxShadow" Value="0 10 15 -3 #1a000000, 0 4 6 -4 #1a000000"/>
        <Setter Property="Padding" Value="24"/>
    </Style>

    <!-- Card Interactive - Hover lift effect -->
    <Style Selector="Border.card-interactive">
        <Setter Property="Background" Value="#E618181b"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="BorderBrush" Value="#27272a"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BoxShadow" Value="0 4 6 -1 #1a000000"/>
        <Setter Property="Transitions">
            <Transitions>
                <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Border.card-interactive:pointerover">
        <Setter Property="Background" Value="#F027272a"/>
        <Setter Property="BorderBrush" Value="#3f3f46"/>
        <Setter Property="BoxShadow" Value="0 10 15 -3 #26000000, 0 4 6 -4 #1a000000"/>
        <Setter Property="RenderTransform" Value="translateY(-2px)"/>
    </Style>

    <!-- =====================================================
         TYPOGRAPHY STYLES
         Clean, modern hierarchy
         ===================================================== -->

    <Style Selector="TextBlock.heading-1">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#fafafa"/>
        <Setter Property="LineHeight" Value="36"/>
    </Style>

    <Style Selector="TextBlock.heading-2">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#fafafa"/>
        <Setter Property="LineHeight" Value="28"/>
    </Style>

    <Style Selector="TextBlock.heading-3">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#fafafa"/>
    </Style>

    <Style Selector="TextBlock.text-body">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#fafafa"/>
        <Setter Property="LineHeight" Value="22"/>
    </Style>

    <Style Selector="TextBlock.text-secondary">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#a1a1aa"/>
    </Style>

    <Style Selector="TextBlock.text-muted">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#71717a"/>
    </Style>

    <Style Selector="TextBlock.text-small">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="#a1a1aa"/>
    </Style>

    <Style Selector="TextBlock.text-caption">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="#71717a"/>
    </Style>

    <!-- =====================================================
         INPUT STYLES
         Modern, larger with focus glow
         ===================================================== -->

    <Style Selector="TextBox.input-default">
        <Setter Property="Background" Value="#18181b"/>
        <Setter Property="Foreground" Value="#fafafa"/>
        <Setter Property="BorderBrush" Value="#3f3f46"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16,14"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style Selector="TextBox.input-chat">
        <Setter Property="Background" Value="#27272a"/>
        <Setter Property="Foreground" Value="#fafafa"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Padding" Value="18,14"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- =====================================================
         BADGE/TAG STYLES
         Pill-shaped, vibrant
         ===================================================== -->

    <Style Selector="Border.badge">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#338ef7" Offset="0"/>
                    <GradientStop Color="#006FEE" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="CornerRadius" Value="9999"/>
        <Setter Property="Padding" Value="12,6"/>
    </Style>
    <Style Selector="Border.badge TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style Selector="Border.tag">
        <Setter Property="Background" Value="#27272a"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="10,6"/>
    </Style>
    <Style Selector="Border.tag TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="#a1a1aa"/>
    </Style>

    <!-- =====================================================
         CHANNEL/LIST ITEM STYLES
         Smooth hover transitions, large radius
         ===================================================== -->

    <Style Selector="Border.voice-channel-item">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Border.voice-channel-item:pointerover">
        <Setter Property="Background" Value="#27272a"/>
    </Style>
    <Style Selector="Border.voice-channel-item:pressed">
        <Setter Property="Background" Value="#3f3f46"/>
    </Style>

    <Style Selector="Button.channel-btn">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>
    <Style Selector="Button.channel-btn:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#27272a"/>
    </Style>
    <Style Selector="Button.channel-btn:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#3f3f46"/>
    </Style>

    <Style Selector="Border.member-item">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Border.member-item:pointerover">
        <Setter Property="Background" Value="#27272a"/>
    </Style>
    <Style Selector="Border.member-item:pressed">
        <Setter Property="Background" Value="#3f3f46"/>
    </Style>

    <Style Selector="Border.voice-participant">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Border.voice-participant:pointerover">
        <Setter Property="Background" Value="#27272a"/>
    </Style>
    <Style Selector="Border.voice-participant:pressed">
        <Setter Property="Background" Value="#3f3f46"/>
    </Style>

    <Style Selector="Button.msg-action-btn">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.msg-action-btn:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#27272a"/>
    </Style>
    <Style Selector="Button.msg-action-btn:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#3f3f46"/>
    </Style>

    <!-- =====================================================
         PANEL STYLES
         Glass effect backgrounds
         ===================================================== -->

    <Style Selector="Border.panel-sidebar">
        <Setter Property="Background" Value="#18181b"/>
    </Style>

    <Style Selector="Border.panel-main">
        <Setter Property="Background" Value="#09090b"/>
    </Style>

    <Style Selector="Border.panel-header">
        <Setter Property="Background" Value="#18181b"/>
        <Setter Property="BorderBrush" Value="#27272a"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="20,16"/>
    </Style>

    <Style Selector="Border.panel-footer">
        <Setter Property="Background" Value="#18181b"/>
        <Setter Property="Padding" Value="20"/>
    </Style>

    <!-- =====================================================
         DIVIDER STYLES
         ===================================================== -->

    <Style Selector="Border.divider-horizontal">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="#27272a"/>
    </Style>

    <Style Selector="Border.divider-vertical">
        <Setter Property="Width" Value="1"/>
        <Setter Property="Background" Value="#27272a"/>
    </Style>

    <!-- =====================================================
         AVATAR STYLES
         ===================================================== -->

    <Style Selector="Border.avatar">
        <Setter Property="CornerRadius" Value="9999"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#338ef7" Offset="0"/>
                    <GradientStop Color="#006FEE" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style Selector="Border.avatar-secondary">
        <Setter Property="CornerRadius" Value="9999"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#a78bfa" Offset="0"/>
                    <GradientStop Color="#7c3aed" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

</Styles>
