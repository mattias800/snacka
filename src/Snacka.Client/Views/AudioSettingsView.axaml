<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Snacka.Client.ViewModels"
             xmlns:conv="using:Snacka.Client.Converters"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="Snacka.Client.Views.AudioSettingsView"
             x:DataType="vm:AudioSettingsViewModel">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="28" MaxWidth="600">
            <!-- Header -->
            <TextBlock Text="Voice &amp; Video"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource ForegroundBrush}"/>

            <!-- Input Device Section -->
            <StackPanel Spacing="10">
                <TextBlock Text="INPUT DEVICE"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource Foreground3Brush}"/>
                <ComboBox x:Name="InputDeviceComboBox"
                          ItemsSource="{Binding InputDevices}"
                          SelectedItem="{Binding SelectedInputDeviceItem, Mode=TwoWay}"
                          DisplayMemberBinding="{Binding DisplayName}"
                          IsEnabled="{Binding IsDevicesLoaded}"
                          Background="{StaticResource Content1Brush}"
                          Foreground="{StaticResource ForegroundBrush}"
                          MinWidth="320"
                          Padding="14,10"
                          CornerRadius="10"
                          DropDownOpened="OnDeviceDropdownOpened"/>
            </StackPanel>

            <!-- Output Device Section -->
            <StackPanel Spacing="10">
                <TextBlock Text="OUTPUT DEVICE"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource Foreground3Brush}"/>
                <ComboBox x:Name="OutputDeviceComboBox"
                          ItemsSource="{Binding OutputDevices}"
                          SelectedItem="{Binding SelectedOutputDeviceItem, Mode=TwoWay}"
                          DisplayMemberBinding="{Binding DisplayName}"
                          IsEnabled="{Binding IsDevicesLoaded}"
                          Background="{StaticResource Content1Brush}"
                          Foreground="{StaticResource ForegroundBrush}"
                          MinWidth="320"
                          Padding="14,10"
                          CornerRadius="10"
                          DropDownOpened="OnDeviceDropdownOpened"/>
            </StackPanel>

            <!-- Input Gain Section -->
            <StackPanel Spacing="10">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="INPUT GAIN"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Foreground3Brush}"/>
                    <TextBlock Grid.Column="1"
                               Text="{Binding InputGainPercent, StringFormat={}{0}%}"
                               FontSize="11"
                               Foreground="{StaticResource Foreground2Brush}"/>
                </Grid>
                <Slider Minimum="0"
                        Maximum="3"
                        Value="{Binding InputGain}"
                        Foreground="{StaticResource PrimaryBrush}"
                        Background="{StaticResource Content1Brush}"/>
                <TextBlock Text="Fine-tune your mic volume. Auto gain control keeps your voice at a consistent level. Use this to adjust further if needed."
                           FontSize="12"
                           Foreground="{StaticResource Foreground3Brush}"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Noise Suppression Section -->
            <StackPanel Spacing="10">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="NOISE SUPPRESSION"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Foreground3Brush}"
                               VerticalAlignment="Center"/>
                    <ToggleSwitch IsChecked="{Binding NoiseSuppression}"
                                  OnContent=""
                                  OffContent=""
                                  Padding="0"
                                  MinWidth="40"/>
                </StackPanel>
                <TextBlock Text="AI-powered reduction of background noise (fans, keyboard, ambient sounds). Changes take effect when you rejoin voice."
                           FontSize="12"
                           Foreground="{StaticResource Foreground3Brush}"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Echo Cancellation Section (Windows/macOS) -->
            <StackPanel Spacing="10" IsVisible="{x:Static vm:AudioSettingsViewModel.IsNotLinux}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="ECHO CANCELLATION"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Foreground3Brush}"
                               VerticalAlignment="Center"/>
                    <ToggleSwitch IsChecked="{Binding EchoCancellation}"
                                  OnContent=""
                                  OffContent=""
                                  Padding="0"
                                  MinWidth="40"/>
                </StackPanel>
                <TextBlock Text="Software-based echo cancellation using WebRTC. Reduces feedback when using speakers instead of headphones. Changes take effect when you rejoin voice."
                           FontSize="12"
                           Foreground="{StaticResource Foreground3Brush}"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Echo Cancellation Info (Linux) -->
            <StackPanel Spacing="10" IsVisible="{x:Static vm:AudioSettingsViewModel.IsLinux}">
                <TextBlock Text="ECHO CANCELLATION"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource Foreground3Brush}"/>
                <Border Background="{StaticResource Content1Brush}" CornerRadius="10" Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Linux uses system-level echo cancellation via PipeWire or PulseAudio."
                                   FontSize="12"
                                   Foreground="{StaticResource Foreground2Brush}"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="To enable, add module-echo-cancel to your audio configuration:"
                                   FontSize="12"
                                   Foreground="{StaticResource Foreground3Brush}"
                                   TextWrapping="Wrap"/>
                        <Border Background="{StaticResource BackgroundBrush}" CornerRadius="6" Padding="12,8">
                            <TextBlock Text="pactl load-module module-echo-cancel aec_method=webrtc"
                                       FontSize="11"
                                       FontFamily="Consolas,Monaco,monospace"
                                       Foreground="{StaticResource Foreground2Brush}"/>
                        </Border>
                        <TextBlock Text="Or for PipeWire, create ~/.config/pipewire/pipewire.conf.d/echo-cancel.conf"
                                   FontSize="12"
                                   Foreground="{StaticResource Foreground3Brush}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Noise Gate Section -->
            <StackPanel Spacing="10">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="NOISE GATE"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Foreground3Brush}"
                                   VerticalAlignment="Center"/>
                        <ToggleSwitch IsChecked="{Binding GateEnabled}"
                                      OnContent=""
                                      OffContent=""
                                      Padding="0"
                                      MinWidth="40"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1"
                               Text="{Binding GateThresholdPercent, StringFormat={}{0}%}"
                               FontSize="11"
                               Foreground="{StaticResource Foreground2Brush}"
                               IsVisible="{Binding GateEnabled}"/>
                </Grid>
                <Slider Minimum="0"
                        Maximum="0.5"
                        Value="{Binding GateThreshold}"
                        Foreground="{StaticResource PrimaryBrush}"
                        Background="{StaticResource Content1Brush}"
                        IsVisible="{Binding GateEnabled}"/>
                <TextBlock Text="Mutes input when audio level is below the threshold, reducing background noise."
                           FontSize="12"
                           Foreground="{StaticResource Foreground3Brush}"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Mic Test Section -->
            <Border Background="{StaticResource Content1Brush}" CornerRadius="16" Padding="24">
                <StackPanel Spacing="20">
                    <TextBlock Text="MIC TEST"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Foreground3Brush}"/>

                    <!-- Test Button and Status -->
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Panel MinWidth="140">
                            <Button Command="{Binding TestMicrophoneCommand}"
                                    Classes="btn-primary"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    IsVisible="{Binding !IsTestingMicrophone}">
                                <TextBlock Text="Let's Check" FontWeight="SemiBold"/>
                            </Button>
                            <Button Command="{Binding TestMicrophoneCommand}"
                                    Classes="btn-danger"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    IsVisible="{Binding IsTestingMicrophone}">
                                <TextBlock Text="Stop Testing" FontWeight="SemiBold" Foreground="White"/>
                            </Button>
                        </Panel>

                        <Button Command="{Binding ToggleLoopbackCommand}"
                                IsEnabled="{Binding IsTestingMicrophone}"
                                Classes="btn-secondary"
                                Padding="16,10"
                                ToolTip.Tip="Hear yourself to test audio quality">
                            <Panel>
                                <TextBlock Text="Enable Loopback"
                                           Foreground="{StaticResource Foreground2Brush}"
                                           IsVisible="{Binding !IsLoopbackEnabled}"/>
                                <TextBlock Text="Disable Loopback"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           IsVisible="{Binding IsLoopbackEnabled}"/>
                            </Panel>
                        </Button>

                        <Button Command="{Binding RefreshDevicesCommand}"
                                Classes="btn-icon"
                                Padding="10"
                                ToolTip.Tip="Refresh audio devices">
                            <ui:SymbolIcon Symbol="Sync" Foreground="{StaticResource Foreground2Brush}" FontSize="16"/>
                        </Button>
                    </StackPanel>

                    <!-- Audio Level Indicator -->
                    <StackPanel Spacing="10" IsVisible="{Binding IsTestingMicrophone}">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="INPUT LEVEL"
                                       FontSize="11"
                                       Foreground="{StaticResource Foreground3Brush}"/>
                            <TextBlock Grid.Column="1"
                                       FontSize="11"
                                       Foreground="{StaticResource Foreground3Brush}">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}Gate: {0}">
                                        <Binding Path="IsAboveGate" Converter="{x:Static conv:BoolToGateStatusConverter.Instance}"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </Grid>

                        <Grid Height="14">
                            <!-- Background bar -->
                            <Border Background="{StaticResource BackgroundBrush}"
                                    CornerRadius="7"
                                    HorizontalAlignment="Stretch"/>

                            <!-- Level indicator - changes color based on gate -->
                            <Border CornerRadius="7"
                                    HorizontalAlignment="Left"
                                    Width="{Binding InputLevel, Converter={x:Static conv:AudioLevelToWidthConverter.Instance}, ConverterParameter=300}">
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding IsAboveGate, Converter={x:Static conv:BoolToGateColorConverter.Instance}}"/>
                                </Border.Background>
                            </Border>

                            <!-- Gate threshold marker (vertical line) -->
                            <Border HorizontalAlignment="Left"
                                    Width="3"
                                    Background="{StaticResource DangerBrush}"
                                    CornerRadius="1"
                                    Margin="{Binding GateThreshold, Converter={x:Static conv:GateThresholdToMarginConverter.Instance}, ConverterParameter=300}"
                                    IsVisible="{Binding GateEnabled}"
                                    ToolTip.Tip="Gate Threshold"/>
                        </Grid>

                        <!-- AGC Status -->
                        <Grid ColumnDefinitions="*,Auto" Margin="0,8,0,0">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="AUTO GAIN"
                                           FontSize="11"
                                           Foreground="{StaticResource Foreground3Brush}"/>
                                <Border Background="{StaticResource Content2Brush}"
                                        CornerRadius="4"
                                        Padding="6,2">
                                    <TextBlock Text="{Binding AgcStatus}"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding AgcGainDisplay}"
                                       FontSize="11"
                                       Foreground="{StaticResource Foreground2Brush}"/>
                        </Grid>

                        <Grid Height="8">
                            <!-- AGC background bar -->
                            <Border Background="{StaticResource BackgroundBrush}"
                                    CornerRadius="4"
                                    HorizontalAlignment="Stretch"/>

                            <!-- AGC level indicator -->
                            <Border CornerRadius="4"
                                    HorizontalAlignment="Left"
                                    Width="{Binding AgcBoostPercent, Converter={x:Static conv:AudioLevelToWidthConverter.Instance}, ConverterParameter=300}">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                                        <GradientStop Color="#3b82f6" Offset="0"/>
                                        <GradientStop Color="#8b5cf6" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Grid>

                        <TextBlock Text="Speak into your microphone. Auto gain adjusts automatically to keep your voice at a consistent level."
                                   FontSize="12"
                                   Foreground="{StaticResource Foreground3Brush}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Instructions when not testing -->
                    <TextBlock Text="Click 'Let's Check' to test your microphone. You'll see a level indicator showing your input volume."
                               FontSize="12"
                               Foreground="{StaticResource Foreground3Brush}"
                               TextWrapping="Wrap"
                               IsVisible="{Binding !IsTestingMicrophone}"/>
                </StackPanel>
            </Border>

            <!-- Info Text -->
            <TextBlock Text="Changes are saved automatically when you select a new device."
                       FontSize="12"
                       Foreground="{StaticResource Foreground3Brush}"
                       Margin="0,8,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
