<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:Snacka.Client.Controls"
             xmlns:services="using:Snacka.Client.Services"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d"
             x:Class="Snacka.Client.Controls.PendingInvitesContent"
             x:DataType="controls:PendingInvitesContent"
             Width="400">

    <Border Background="#18181b"
            CornerRadius="16"
            Padding="24"
            BoxShadow="0 25 50 -12 #40000000">
        <StackPanel Spacing="20">
            <!-- Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="Community Invites"
                               Foreground="#fafafa"
                               FontSize="20"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="You've been invited to join these communities"
                               Foreground="#71717a"
                               FontSize="13"
                               TextWrapping="Wrap"/>
                </StackPanel>
                <Button Grid.Column="1"
                        Command="{Binding CloseCommand, RelativeSource={RelativeSource AncestorType=controls:PendingInvitesContent}}"
                        ToolTip.Tip="Close"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="8"
                        CornerRadius="8"
                        VerticalAlignment="Top">
                    <ui:SymbolIcon Symbol="Dismiss"
                               Foreground="#71717a"
                               FontSize="16"/>
                </Button>
            </Grid>

            <!-- Invites List -->
            <Border Background="#27272a"
                    CornerRadius="12"
                    MinHeight="120"
                    MaxHeight="380"
                    ClipToBounds="True">
                <ScrollViewer Padding="8">
                    <StackPanel>
                        <!-- Empty State -->
                        <StackPanel HorizontalAlignment="Center"
                                    Margin="0,40,0,40"
                                    IsVisible="{Binding HasNoPendingInvites, RelativeSource={RelativeSource AncestorType=controls:PendingInvitesContent}}">
                            <ui:SymbolIcon Symbol="Mail"
                                       FontSize="32"
                                       Foreground="#3f3f46"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,12"/>
                            <TextBlock Text="No pending invites"
                                       Foreground="#52525b"
                                       FontSize="14"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Invitations will appear here"
                                       Foreground="#3f3f46"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Loading State -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Spacing="10"
                                    Margin="0,50,0,50"
                                    IsVisible="{Binding IsLoading, RelativeSource={RelativeSource AncestorType=controls:PendingInvitesContent}}">
                            <ui:ProgressRing Width="20" Height="20" IsIndeterminate="True" Foreground="#006FEE"/>
                            <TextBlock Text="Loading invites..."
                                       Foreground="#71717a"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Invites List -->
                        <ItemsControl ItemsSource="{Binding PendingInvites, RelativeSource={RelativeSource AncestorType=controls:PendingInvitesContent}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="services:CommunityInviteResponse">
                                    <Border Background="#1a27272a"
                                            CornerRadius="10"
                                            Padding="14"
                                            Margin="0,0,0,8">
                                        <StackPanel Spacing="14">
                                            <!-- Community Name and Icon -->
                                            <StackPanel Orientation="Horizontal" Spacing="14">
                                                <Border Width="48" Height="48" CornerRadius="12">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                                            <GradientStop Color="#338ef7" Offset="0"/>
                                                            <GradientStop Color="#006FEE" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <TextBlock Text="{Binding CommunityName, Converter={x:Static controls:FirstLetterConverter.Instance}}"
                                                               Foreground="White"
                                                               FontSize="18"
                                                               FontWeight="Bold"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel VerticalAlignment="Center" Spacing="4">
                                                    <TextBlock Text="{Binding CommunityName}"
                                                               Foreground="#fafafa"
                                                               FontSize="15"
                                                               FontWeight="SemiBold"/>
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <ui:SymbolIcon Symbol="Contact"
                                                                   FontSize="12"
                                                                   Foreground="#71717a"
                                                                   VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding InvitedByEffectiveDisplayName, StringFormat='Invited by {0}'}"
                                                                   Foreground="#71717a"
                                                                   FontSize="12"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Actions -->
                                            <Grid ColumnDefinitions="*,*" Margin="0,2,0,0">
                                                <Button Grid.Column="0"
                                                        Content="Decline"
                                                        HorizontalAlignment="Stretch"
                                                        HorizontalContentAlignment="Center"
                                                        Background="#27272a"
                                                        Foreground="#a1a1aa"
                                                        BorderThickness="0"
                                                        Padding="14,10"
                                                        CornerRadius="10"
                                                        FontWeight="SemiBold"
                                                        FontSize="13"
                                                        Margin="0,0,4,0"
                                                        Command="{Binding DeclineInviteCommand, RelativeSource={RelativeSource AncestorType=controls:PendingInvitesContent}}"
                                                        CommandParameter="{Binding}"/>
                                                <Button Grid.Column="1"
                                                        Content="Accept"
                                                        HorizontalAlignment="Stretch"
                                                        HorizontalContentAlignment="Center"
                                                        BorderThickness="0"
                                                        Padding="14,10"
                                                        CornerRadius="10"
                                                        FontWeight="SemiBold"
                                                        FontSize="13"
                                                        Margin="4,0,0,0"
                                                        Command="{Binding AcceptInviteCommand, RelativeSource={RelativeSource AncestorType=controls:PendingInvitesContent}}"
                                                        CommandParameter="{Binding}">
                                                    <Button.Background>
                                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                                            <GradientStop Color="#22c55e" Offset="0"/>
                                                            <GradientStop Color="#16a34a" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Button.Background>
                                                    <Button.Foreground>
                                                        <SolidColorBrush Color="White"/>
                                                    </Button.Foreground>
                                                </Button>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
