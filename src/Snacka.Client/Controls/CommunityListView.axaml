<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:Snacka.Client.Controls"
             xmlns:services="using:Snacka.Client.Services"
             xmlns:conv="using:Snacka.Client.Converters"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d"
             x:Class="Snacka.Client.Controls.CommunityListView"
             x:DataType="controls:CommunityListView">

    <Border Background="{StaticResource BackgroundBrush}" Padding="0,12">
        <DockPanel>
            <!-- Add Community Button -->
            <Button DockPanel.Dock="Bottom"
                    Classes="btn-ghost"
                    Command="{Binding CreateCommunityCommand, RelativeSource={RelativeSource AncestorType=controls:CommunityListView}}"
                    HorizontalAlignment="Center"
                    Margin="0,8"
                    Padding="0"
                    IsEnabled="{Binding IsLoading, RelativeSource={RelativeSource AncestorType=controls:CommunityListView}, Converter={x:Static BoolConverters.Not}}">
                <Border Width="48" Height="48" CornerRadius="18"
                        Background="{StaticResource Content1Brush}">
                    <ui:SymbolIcon Symbol="Add"
                               Foreground="{StaticResource SuccessBrush}"
                               FontSize="24"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
            </Button>

            <!-- DM Button and Server Icons -->
            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <StackPanel>
                    <!-- Direct Messages Button -->
                    <Button Classes="btn-ghost"
                            Command="{Binding OpenDMsCommand, RelativeSource={RelativeSource AncestorType=controls:CommunityListView}}"
                            HorizontalAlignment="Center"
                            Margin="0,4"
                            Padding="0"
                            ToolTip.Tip="Direct Messages">
                        <Border Width="48" Height="48"
                                CornerRadius="18"
                                Background="{StaticResource Content1Brush}">
                            <ui:SymbolIcon Symbol="Mail"
                                       Foreground="White"
                                       FontSize="20"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Button>

                    <!-- Separator -->
                    <Border Width="32" Height="2" Background="{StaticResource Content1Brush}" Margin="8,10" HorizontalAlignment="Center" CornerRadius="1"/>

                    <!-- Community Icons -->
                    <ItemsControl x:Name="CommunitiesList"
                                  ItemsSource="{Binding Communities, RelativeSource={RelativeSource AncestorType=controls:CommunityListView}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="services:CommunityResponse">
                                <Button Classes="btn-ghost"
                                        Command="{Binding SelectCommunityCommand, RelativeSource={RelativeSource AncestorType=controls:CommunityListView}}"
                                        CommandParameter="{Binding}"
                                        HorizontalAlignment="Center"
                                        Margin="0,4"
                                        Padding="0">
                                    <Border Width="48" Height="48"
                                            CornerRadius="18"
                                            Background="{StaticResource PrimaryGradient}">
                                        <TextBlock Text="{Binding Name, Converter={x:Static conv:FirstCharConverter.Instance}}"
                                                   Foreground="White"
                                                   FontSize="20"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Border>
</UserControl>
