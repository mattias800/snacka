<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:Snacka.Client.Controls"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d"
             x:Class="Snacka.Client.Controls.InviteUserContent"
             x:DataType="controls:InviteUserContent"
             Width="400">

    <Border Background="{StaticResource Content2Brush}"
            CornerRadius="12"
            Padding="16"
            BoxShadow="0 8 32 0 #66000000">
        <StackPanel Spacing="16">
            <!-- Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="Invite Users"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CommunityName, RelativeSource={RelativeSource AncestorType=controls:InviteUserContent}, StringFormat='Invite users to {0}'}"
                               Classes="text-muted"
                               FontSize="12"/>
                </StackPanel>
                <Button Grid.Column="1"
                        Classes="btn-icon"
                        Command="{Binding CloseCommand, RelativeSource={RelativeSource AncestorType=controls:InviteUserContent}}"
                        ToolTip.Tip="Close"
                        Padding="4"
                        MinWidth="24"
                        MinHeight="24">
                    <ui:SymbolIcon Symbol="Dismiss"
                               Foreground="{StaticResource Foreground3Brush}"
                               FontSize="14"/>
                </Button>
            </Grid>

            <!-- Search Box -->
            <Border Background="{StaticResource Content1Brush}"
                    CornerRadius="8"
                    Padding="12,8">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <TextBlock Grid.Column="0"
                               Text="&#x1F50D;"
                               Foreground="{StaticResource Foreground3Brush}"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBox Grid.Column="1"
                             x:Name="SearchBox"
                             Classes="input-borderless"
                             Watermark="Search by username..."
                             Text="{Binding SearchQuery, RelativeSource={RelativeSource AncestorType=controls:InviteUserContent}, Mode=TwoWay}"
                             KeyUp="OnSearchBoxKeyUp"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="0"/>
                    <ui:ProgressRing Grid.Column="2"
                                      Width="16"
                                      Height="16"
                                      IsVisible="{Binding IsSearching, RelativeSource={RelativeSource AncestorType=controls:InviteUserContent}}"
                                      IsIndeterminate="True"
                                      Foreground="{StaticResource PrimaryBrush}"/>
                </Grid>
            </Border>

            <!-- Search Results -->
            <Border Background="{StaticResource Content1Brush}"
                    CornerRadius="8"
                    MinHeight="200"
                    MaxHeight="300">
                <ScrollViewer>
                    <StackPanel>
                        <!-- Empty State: No search yet -->
                        <TextBlock Text="Type a username to search"
                                   Classes="text-muted"
                                   FontSize="13"
                                   HorizontalAlignment="Center"
                                   Margin="0,60,0,0">
                            <TextBlock.IsVisible>
                                <MultiBinding Converter="{x:Static BoolConverters.And}">
                                    <Binding Path="SearchQuery" RelativeSource="{RelativeSource AncestorType=controls:InviteUserContent}" Converter="{x:Static StringConverters.IsNullOrEmpty}"/>
                                    <Binding Path="IsSearching" RelativeSource="{RelativeSource AncestorType=controls:InviteUserContent}" Converter="{x:Static BoolConverters.Not}"/>
                                </MultiBinding>
                            </TextBlock.IsVisible>
                        </TextBlock>

                        <!-- Empty State: No results -->
                        <TextBlock Text="No users found"
                                   Classes="text-muted"
                                   FontSize="13"
                                   HorizontalAlignment="Center"
                                   Margin="0,60,0,0">
                            <TextBlock.IsVisible>
                                <MultiBinding Converter="{x:Static BoolConverters.And}">
                                    <Binding Path="SearchQuery" RelativeSource="{RelativeSource AncestorType=controls:InviteUserContent}" Converter="{x:Static StringConverters.IsNotNullOrEmpty}"/>
                                    <Binding Path="IsSearching" RelativeSource="{RelativeSource AncestorType=controls:InviteUserContent}" Converter="{x:Static BoolConverters.Not}"/>
                                    <Binding Path="HasNoResults" RelativeSource="{RelativeSource AncestorType=controls:InviteUserContent}"/>
                                </MultiBinding>
                            </TextBlock.IsVisible>
                        </TextBlock>

                        <!-- Results List -->
                        <ItemsControl ItemsSource="{Binding SearchResults, RelativeSource={RelativeSource AncestorType=controls:InviteUserContent}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Classes="btn-transparent"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            Padding="12,8"
                                            Command="{Binding InviteUserCommand, RelativeSource={RelativeSource AncestorType=controls:InviteUserContent}}"
                                            CommandParameter="{Binding}">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <!-- Avatar placeholder -->
                                            <Ellipse Grid.Column="0"
                                                     Width="36"
                                                     Height="36"
                                                     Fill="{StaticResource Content3Brush}"
                                                     Margin="0,0,12,0"/>

                                            <!-- User info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                                <TextBlock Text="{Binding EffectiveDisplayName}"
                                                           Foreground="White"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Username, StringFormat='@{0}'}"
                                                           Classes="text-muted"
                                                           FontSize="12"/>
                                            </StackPanel>

                                            <!-- Online indicator -->
                                            <Ellipse Grid.Column="2"
                                                     Width="10"
                                                     Height="10"
                                                     Fill="{StaticResource SuccessBrush}"
                                                     VerticalAlignment="Center"
                                                     IsVisible="{Binding IsOnline}"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage, RelativeSource={RelativeSource AncestorType=controls:InviteUserContent}}"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       IsVisible="{Binding StatusMessage, RelativeSource={RelativeSource AncestorType=controls:InviteUserContent}, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                <TextBlock.Foreground>
                    <Binding Path="IsStatusError" RelativeSource="{RelativeSource AncestorType=controls:InviteUserContent}">
                        <Binding.Converter>
                            <controls:BoolToStatusColorConverter/>
                        </Binding.Converter>
                    </Binding>
                </TextBlock.Foreground>
            </TextBlock>
        </StackPanel>
    </Border>
</UserControl>
