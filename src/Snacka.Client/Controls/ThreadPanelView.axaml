<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="using:Snacka.Client.Converters"
             xmlns:controls="using:Snacka.Client.Controls"
             xmlns:vm="using:Snacka.Client.ViewModels"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d"
             x:Class="Snacka.Client.Controls.ThreadPanelView"
             x:DataType="vm:ThreadViewModel">

    <DockPanel Background="{StaticResource Content1Brush}">
        <!-- Header with close button -->
        <Border DockPanel.Dock="Top" Background="{StaticResource BackgroundBrush}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Thread"
                           Classes="heading-3"
                           VerticalAlignment="Center"/>
                <Button Grid.Column="1"
                        Classes="btn-icon"
                        Command="{Binding CloseCommand}"
                        ToolTip.Tip="Close thread">
                    <ui:SymbolIcon Symbol="Dismiss" Foreground="{StaticResource Foreground3Brush}" FontSize="14"/>
                </Button>
            </Grid>
        </Border>

        <!-- Parent Message Preview -->
        <Border DockPanel.Dock="Top" Background="{StaticResource Content2Brush}" Padding="14" Margin="12,12,12,0" CornerRadius="12">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Border Width="28" Height="28" CornerRadius="14" Background="{StaticResource PrimaryGradient}">
                        <TextBlock Text="{Binding ParentMessage.AuthorUsername, Converter={x:Static conv:FirstCharConverter.Instance}}"
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="{Binding ParentMessage.AuthorUsername}"
                               Classes="heading-3"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="{Binding ParentMessage.Content}"
                           Classes="text-body"
                           FontSize="13"
                           TextWrapping="Wrap"
                           MaxLines="3"
                           Margin="0,8,0,0"/>
                <TextBlock Classes="text-muted" FontSize="11" Margin="0,6,0,0">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} replies">
                            <Binding Path="TotalReplyCount"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Reply Input (docked at bottom) -->
        <Border DockPanel.Dock="Bottom" Background="{StaticResource Content3Brush}" Margin="12" CornerRadius="12" Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="ThreadReplyInput"
                         Text="{Binding ReplyInput, Mode=TwoWay}"
                         Watermark="Reply..."
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         AcceptsReturn="False"
                         KeyDown="OnThreadReplyKeyDown"/>
                <Button Grid.Column="1"
                        Classes="btn-primary"
                        Command="{Binding SendReplyCommand}"
                        Margin="8,0,0,0">
                    <TextBlock Text="Send" FontSize="12"/>
                </Button>
            </Grid>
        </Border>

        <!-- Loading indicator -->
        <TextBlock Text="Loading..."
                   Classes="text-muted"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"
                   IsVisible="{Binding IsLoading}"/>

        <!-- Replies List -->
        <ScrollViewer x:Name="ThreadRepliesScrollViewer" Margin="0,8">
            <ItemsControl x:Name="ThreadRepliesList" ItemsSource="{Binding Replies}" Margin="8,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:MessageItemView
                            Message="{Binding}"
                            AuthorUsername="{Binding AuthorUsername}"
                            MessageContent="{Binding Content}"
                            CreatedAt="{Binding CreatedAt}"
                            IsEdited="{Binding IsEdited}"
                            ReplyTo="{Binding ReplyTo}"
                            Reactions="{Binding Reactions}"
                            Attachments="{Binding Attachments}"
                            BaseUrl="{Binding BaseUrl, RelativeSource={RelativeSource AncestorType=controls:ThreadPanelView}}"
                            StartEditMessageCommand="{Binding StartEditMessageCommand, RelativeSource={RelativeSource AncestorType=controls:ThreadPanelView}}"
                            DeleteMessageCommand="{Binding DeleteMessageCommand, RelativeSource={RelativeSource AncestorType=controls:ThreadPanelView}}"
                            ShowThreadIndicator="False"
                            ShowStartThreadButton="False"
                            ShowPinButton="False"
                            ShowReplyButton="False"
                            ShowReactions="True"
                            ShowAttachments="True"
                            ShowDateSeparator="False"
                            AddReactionRequested="OnMessageAddReactionRequested"
                            ReactionToggleRequested="OnMessageReactionToggleRequested"
                            ImageClicked="OnMessageImageClicked"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
