<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Snacka.Client.ViewModels"
             xmlns:sharedui="using:Snacka.Client.UI"
             xmlns:li="using:Snacka.Client.UI.ListItems"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d"
             x:Class="Snacka.Client.Controls.ActivityFeedView"
             x:DataType="vm:ActivityFeedViewModel"
             x:CompileBindings="False">

    <UserControl.Resources>
        <!-- Template selector for different activity types -->
        <sharedui:ActivityItemTemplateSelector x:Key="ActivityTemplateSelector">
            <!-- DM notifications -->
            <sharedui:ActivityItemTemplateSelector.DirectMessageTemplate>
                <DataTemplate x:DataType="vm:ActivityItem">
                    <li:DmActivityItem
                        SenderName="{Binding Title}"
                        MessagePreview="{Binding Description}"
                        RelativeTime="{Binding RelativeTime}"
                        IsRead="{Binding IsRead}"
                        Command="{Binding $parent[UserControl].DataContext.ActivityClickedCommand}"
                        CommandParameter="{Binding}">
                        <li:DmActivityItem.IconContent>
                            <Border Width="32" Height="32"
                                    CornerRadius="16"
                                    Background="{StaticResource Content3Brush}">
                                <ui:SymbolIcon Symbol="{Binding Icon}"
                                               Foreground="{StaticResource Foreground2Brush}"
                                               FontSize="14"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                            </Border>
                        </li:DmActivityItem.IconContent>
                    </li:DmActivityItem>
                </DataTemplate>
            </sharedui:ActivityItemTemplateSelector.DirectMessageTemplate>

            <!-- Community invites -->
            <sharedui:ActivityItemTemplateSelector.InviteTemplate>
                <DataTemplate x:DataType="vm:ActivityItem">
                    <li:InviteActivityItem
                        Title="{Binding Title}"
                        Description="{Binding Description}"
                        RelativeTime="{Binding RelativeTime}"
                        IsRead="{Binding IsRead}"
                        AcceptCommand="{Binding $parent[UserControl].DataContext.AcceptInviteCommand}"
                        DeclineCommand="{Binding $parent[UserControl].DataContext.DeclineInviteCommand}"
                        CommandParameter="{Binding}">
                        <li:InviteActivityItem.IconContent>
                            <Border Width="32" Height="32"
                                    CornerRadius="16"
                                    Background="{StaticResource Content3Brush}">
                                <ui:SymbolIcon Symbol="{Binding Icon}"
                                               Foreground="{StaticResource Foreground2Brush}"
                                               FontSize="14"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                            </Border>
                        </li:InviteActivityItem.IconContent>
                    </li:InviteActivityItem>
                </DataTemplate>
            </sharedui:ActivityItemTemplateSelector.InviteTemplate>

            <!-- Default template for other activity types -->
            <sharedui:ActivityItemTemplateSelector.DefaultTemplate>
                <DataTemplate x:DataType="vm:ActivityItem">
                    <sharedui:ListItemView
                        PrimaryText="{Binding Title}"
                        SecondaryText="{Binding Description}"
                        IsClickable="False">
                        <sharedui:ListItemView.IconContent>
                            <Border Width="32" Height="32"
                                    CornerRadius="16"
                                    Background="{StaticResource Content3Brush}">
                                <ui:SymbolIcon Symbol="{Binding Icon}"
                                               Foreground="{StaticResource Foreground2Brush}"
                                               FontSize="14"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                            </Border>
                        </sharedui:ListItemView.IconContent>
                        <sharedui:ListItemView.RightContent>
                            <TextBlock Text="{Binding RelativeTime}"
                                       Foreground="{StaticResource Foreground3Brush}"
                                       FontSize="10"/>
                        </sharedui:ListItemView.RightContent>
                    </sharedui:ListItemView>
                </DataTemplate>
            </sharedui:ActivityItemTemplateSelector.DefaultTemplate>
        </sharedui:ActivityItemTemplateSelector>
    </UserControl.Resources>

    <DockPanel>
        <!-- Activity List -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Margin="0,8,0,0">
            <Panel>
                <!-- Empty state -->
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Spacing="12"
                            Margin="24"
                            IsVisible="{Binding !Activities.Count}">
                    <ui:SymbolIcon Symbol="Important"
                               Foreground="{StaticResource Foreground3Brush}"
                               FontSize="32"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="No activity yet"
                               Classes="text-muted"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Recent mentions, DMs, and updates will appear here"
                               Classes="text-muted"
                               FontSize="12"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Activities list -->
                <ItemsControl ItemsSource="{Binding Activities}"
                              IsVisible="{Binding Activities.Count}"
                              Margin="8,0"
                              ItemTemplate="{StaticResource ActivityTemplateSelector}"/>
            </Panel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
