<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:Snacka.Client.Controls"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d"
             x:Class="Snacka.Client.Controls.VoiceConnectedPanelView"
             x:DataType="controls:VoiceConnectedPanelView"
             IsVisible="{Binding IsInVoiceChannel, RelativeSource={RelativeSource Self}}">

    <Border Background="#292b2f"
            Padding="8"
            BorderThickness="0,0,0,1"
            BorderBrush="#202225">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Voice Channel Info -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                <!-- Connected icon (green) -->
                <ui:SymbolIcon Symbol="Speaker2"
                           Foreground="#3ba55c"
                           FontSize="14"
                           VerticalAlignment="Center"
                           IsVisible="{Binding IsVoiceConnected, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"/>
                <!-- Connecting icon (yellow) -->
                <ui:SymbolIcon Symbol="Sync"
                           Foreground="#faa61a"
                           FontSize="14"
                           VerticalAlignment="Center"
                           IsVisible="{Binding IsVoiceConnecting, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"/>
                <StackPanel>
                    <!-- Connected status (green) -->
                    <TextBlock Text="{Binding VoiceConnectionStatusText, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"
                               Foreground="#3ba55c"
                               FontSize="12"
                               FontWeight="SemiBold"
                               IsVisible="{Binding IsVoiceConnected, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"/>
                    <!-- Connecting status (yellow) -->
                    <TextBlock Text="{Binding VoiceConnectionStatusText, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"
                               Foreground="#faa61a"
                               FontSize="12"
                               FontWeight="SemiBold"
                               IsVisible="{Binding IsVoiceConnecting, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"/>
                    <TextBlock Text="{Binding CurrentVoiceChannel.Name, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"
                               Foreground="#72767d"
                               FontSize="11"/>
                    <!-- Show community name when in a different community -->
                    <TextBlock Foreground="#5c5f63"
                               FontSize="10"
                               FontStyle="Italic"
                               IsVisible="{Binding IsVoiceInDifferentCommunity, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="(in {0})">
                                <Binding Path="VoiceCommunityName" RelativeSource="{RelativeSource AncestorType=controls:VoiceConnectedPanelView}"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Voice Controls -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                <!-- Camera Button - only show when connected, green when on -->
                <Panel IsVisible="{Binding IsVoiceConnected, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}">
                    <Button Command="{Binding ToggleCameraCommand, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"
                            Padding="8"
                            CornerRadius="4"
                            Cursor="Hand"
                            Background="#3ba55c"
                            ToolTip.Tip="Turn off camera"
                            IsVisible="{Binding IsCameraOn, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}">
                        <ui:SymbolIcon Symbol="Video" Foreground="White" FontSize="16"/>
                    </Button>
                    <Button Command="{Binding ToggleCameraCommand, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"
                            Padding="8"
                            CornerRadius="4"
                            Cursor="Hand"
                            Background="Transparent"
                            ToolTip.Tip="Turn on camera"
                            IsVisible="{Binding !IsCameraOn, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}">
                        <ui:SymbolIcon Symbol="Video" Foreground="White" FontSize="16"/>
                    </Button>
                </Panel>
                <!-- Screen Share Button - only show when connected, green when sharing -->
                <Panel IsVisible="{Binding IsVoiceConnected, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}">
                    <Button Command="{Binding ToggleScreenShareCommand, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"
                            Padding="8"
                            CornerRadius="4"
                            Cursor="Hand"
                            Background="#3ba55c"
                            ToolTip.Tip="Stop sharing"
                            IsVisible="{Binding IsScreenSharing, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}">
                        <ui:SymbolIcon Symbol="Share" Foreground="White" FontSize="16"/>
                    </Button>
                    <Button Command="{Binding ToggleScreenShareCommand, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"
                            Padding="8"
                            CornerRadius="4"
                            Cursor="Hand"
                            Background="Transparent"
                            ToolTip.Tip="Share screen"
                            IsVisible="{Binding !IsScreenSharing, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}">
                        <ui:SymbolIcon Symbol="Share" Foreground="White" FontSize="16"/>
                    </Button>
                </Panel>
                <!-- Allow Drawing Button - only visible when screen sharing -->
                <Panel IsVisible="{Binding IsScreenSharing, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}">
                    <ToggleButton IsChecked="{Binding IsDrawingAllowedForViewers, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"
                                  Padding="8"
                                  CornerRadius="4"
                                  Cursor="Hand"
                                  ToolTip.Tip="Allow viewers to draw on your screen">
                        <ui:SymbolIcon Symbol="Edit" Foreground="White" FontSize="16"/>
                    </ToggleButton>
                </Panel>
                <!-- Share Port Button - only show when connected, green when sharing -->
                <Panel IsVisible="{Binding IsVoiceConnected, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}">
                    <Button Command="{Binding SharePortCommand, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"
                            Padding="8"
                            CornerRadius="4"
                            Cursor="Hand"
                            Background="#3ba55c"
                            ToolTip.Tip="Manage shared ports"
                            IsVisible="{Binding HasActivePortShares, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}">
                        <ui:SymbolIcon Symbol="Globe" Foreground="White" FontSize="16"/>
                    </Button>
                    <Button Command="{Binding SharePortCommand, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"
                            Padding="8"
                            CornerRadius="4"
                            Cursor="Hand"
                            Background="Transparent"
                            ToolTip.Tip="Share a local port"
                            IsVisible="{Binding !HasActivePortShares, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}">
                        <ui:SymbolIcon Symbol="Globe" Foreground="White" FontSize="16"/>
                    </Button>
                </Panel>
                <!-- Show Video Grid Button - only show when connected -->
                <Button Command="{Binding ShowVoiceVideoOverlayCommand, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"
                        Padding="8"
                        CornerRadius="4"
                        Cursor="Hand"
                        Background="Transparent"
                        ToolTip.Tip="Show video grid"
                        IsVisible="{Binding IsVoiceConnected, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}">
                    <ui:SymbolIcon Symbol="View" Foreground="White" FontSize="16"/>
                </Button>
                <!-- Disconnect Button - always visible (works for both cancel and disconnect) -->
                <Button Command="{Binding LeaveVoiceChannelCommand, RelativeSource={RelativeSource AncestorType=controls:VoiceConnectedPanelView}}"
                        Background="#ed4245"
                        Padding="8"
                        CornerRadius="4"
                        Cursor="Hand"
                        ToolTip.Tip="Disconnect">
                    <ui:SymbolIcon Symbol="Phone"
                               Foreground="White"
                               FontSize="16"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
