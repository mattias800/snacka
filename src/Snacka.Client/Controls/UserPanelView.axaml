<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:Snacka.Client.Controls"
             xmlns:conv="using:Snacka.Client.Converters"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d"
             x:Class="Snacka.Client.Controls.UserPanelView"
             x:DataType="controls:UserPanelView">

    <Border Background="{StaticResource BackgroundBrush}" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Panel Grid.Column="0" Width="40" Height="40" Margin="0,0,10,0">
                <!-- Speaking indicator ring (green glow when speaking) -->
                <Border Width="40" Height="40"
                        CornerRadius="20"
                        BorderBrush="{StaticResource SuccessBrush}"
                        BorderThickness="2"
                        IsVisible="{Binding IsSpeaking, RelativeSource={RelativeSource AncestorType=controls:UserPanelView}}"/>
                <Border Width="36" Height="36" CornerRadius="18" Background="{StaticResource PrimaryGradient}"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Username, RelativeSource={RelativeSource AncestorType=controls:UserPanelView}, Converter={x:Static conv:FirstCharConverter.Instance}}"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                <!-- Muted indicator on avatar -->
                <Border Width="16" Height="16"
                        CornerRadius="8"
                        Background="{StaticResource DangerBrush}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,0"
                        IsVisible="{Binding IsMuted, RelativeSource={RelativeSource AncestorType=controls:UserPanelView}}">
                    <ui:SymbolIcon Symbol="SpeakerMute" FontSize="8"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
            </Panel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="{Binding Username, RelativeSource={RelativeSource AncestorType=controls:UserPanelView}}"
                           Classes="heading-3"
                           FontSize="13"/>
                <TextBlock Text="Online"
                           Foreground="{StaticResource SuccessBrush}"
                           FontSize="11"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                <!-- Mute Button - always visible -->
                <Panel>
                    <Button Classes="btn-icon"
                            Command="{Binding ToggleMuteCommand, RelativeSource={RelativeSource AncestorType=controls:UserPanelView}}"
                            Padding="8"
                            Background="{StaticResource DangerBrush}"
                            ToolTip.Tip="Unmute"
                            IsVisible="{Binding IsMuted, RelativeSource={RelativeSource AncestorType=controls:UserPanelView}}">
                        <ui:SymbolIcon Symbol="Mute" Foreground="White" FontSize="14"/>
                    </Button>
                    <Button Classes="btn-icon"
                            Command="{Binding ToggleMuteCommand, RelativeSource={RelativeSource AncestorType=controls:UserPanelView}}"
                            Padding="8"
                            ToolTip.Tip="Mute"
                            IsVisible="{Binding !IsMuted, RelativeSource={RelativeSource AncestorType=controls:UserPanelView}}">
                        <ui:SymbolIcon Symbol="Microphone" Foreground="{StaticResource Foreground2Brush}" FontSize="14"/>
                    </Button>
                </Panel>
                <!-- Deafen Button - always visible -->
                <Panel>
                    <Button Classes="btn-icon"
                            Command="{Binding ToggleDeafenCommand, RelativeSource={RelativeSource AncestorType=controls:UserPanelView}}"
                            Padding="8"
                            Background="{StaticResource DangerBrush}"
                            ToolTip.Tip="Undeafen"
                            IsVisible="{Binding IsDeafened, RelativeSource={RelativeSource AncestorType=controls:UserPanelView}}">
                        <ui:SymbolIcon Symbol="SpeakerMute" Foreground="White" FontSize="14"/>
                    </Button>
                    <Button Classes="btn-icon"
                            Command="{Binding ToggleDeafenCommand, RelativeSource={RelativeSource AncestorType=controls:UserPanelView}}"
                            Padding="8"
                            ToolTip.Tip="Deafen"
                            IsVisible="{Binding !IsDeafened, RelativeSource={RelativeSource AncestorType=controls:UserPanelView}}">
                        <ui:SymbolIcon Symbol="Speaker2" Foreground="{StaticResource Foreground2Brush}" FontSize="14"/>
                    </Button>
                </Panel>
                <!-- Audio Device Button -->
                <Button x:Name="AudioDeviceButton"
                        Classes="btn-icon"
                        Padding="8"
                        ToolTip.Tip="Audio Devices"
                        Click="OnAudioDeviceButtonClick">
                    <ui:SymbolIcon Symbol="Audio" Foreground="{StaticResource Foreground2Brush}" FontSize="14"/>
                </Button>
                <!-- Settings Button -->
                <Button Classes="btn-icon"
                        Command="{Binding OpenSettingsCommand, RelativeSource={RelativeSource AncestorType=controls:UserPanelView}}"
                        Padding="8"
                        ToolTip.Tip="Settings">
                    <ui:SymbolIcon Symbol="Settings"
                               Foreground="{StaticResource Foreground2Brush}"
                               FontSize="14"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
