{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ServerInfo": {
    "Name": "Miscord Server",
    "Description": "A self-hosted Discord alternative",
    "AllowRegistration": true
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=miscord;Username=miscord;Password=miscord"
  },
  "Jwt": {
    "SecretKey": "ThisIsADevelopmentSecretKeyThatShouldBeChangedInProduction-AtLeast32Chars!",
    "Issuer": "Miscord",
    "Audience": "Miscord",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "FileStorage": {
    "BasePath": "./uploads",
    "MaxFileSizeBytes": 26214400,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".pdf", ".txt", ".doc", ".docx", ".xls", ".xlsx", ".zip"],
    "AllowedImageExtensions": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
    "MaxFilesPerMessage": 10
  }
}
